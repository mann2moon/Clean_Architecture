@model Application.ViewModels.CoursesViewModel
@{
    ViewData["Title"] = "دوره ها";
}
<div class="container">
    <div class="row course-content">
        @foreach (var item in Model.Courses)
        {
            <div class="course-image-container">
                <div class="course-image" style="background-image: url(/Images/@item.ImageUrl)"></div>
            </div>
            <a asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
            <div>@item.Description</div>
                                  <hr/>
        }
    </div>
</div>
